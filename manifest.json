{
	"name": 			"Smark Bookmarker",
 	"version": 			"1.0",
 	"description": 		"Smart way to bookmark your Web content",
 	"permissions": 		
 		[
 			"tabs", 
 			"activeTab",
 			"storage",
 			"http://*/*",
 			"https://*/*"
 		],
 	"background": {
 		"scripts":	
 			[
 				"background.js"
 			],
 		"persistent": 	false
 	},
 	"browser_action" : {
 		"default_title" : "Smark Bookmarker",
 		"default_popup": "index.html"
 	},

 	/*"content_scripts": [{
